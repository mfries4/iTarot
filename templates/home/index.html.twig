{% extends 'base.html.twig' %}

{% block title %}Accueil - iTarot
{% endblock %}

{% block body %}
	<div class="row mb-4">
		<div class="col">
			<h1 class="display-4">Bienvenue sur iTarot üÉè</h1>
			<p class="lead">G√©rez vos parties de tarot et suivez vos statistiques</p>
		</div>
	</div>

	<div class="row mb-4">
		<div class="col-md-4 mb-3">
			<div class="card h-100">
				<div class="card-body text-center">
					<i class="bi bi-folder-plus text-primary" style="font-size: 3rem;"></i>
					<h5 class="card-title mt-3">Nouvelle liste</h5>
					<p class="card-text">Cr√©ez une liste de joueurs pour enregistrer plusieurs parties</p>
					<a href="{{ path('app_list_new') }}" class="btn btn-primary">Cr√©er une liste</a>
				</div>
			</div>
		</div>
		<div class="col-md-4 mb-3">
			<div class="card h-100">
				<div class="card-body text-center">
					<i class="bi bi-people-fill text-success" style="font-size: 3rem;"></i>
					<h5 class="card-title mt-3">Joueurs</h5>
					<p class="card-text">G√©rez vos joueurs</p>
					<a href="{{ path('app_player_index') }}" class="btn btn-success">Voir les joueurs</a>
				</div>
			</div>
		</div>
	</div>
	<div class="d-flex justify-content-between align-items-center mb-3">
		<h2 class="mb-0">Mes listes de parties</h2>
	</div>
	{% if lists is defined and lists|length > 0 %}
		<div class="row">
			{% for list in lists %}
				<div class="col-md-4 mb-3">
					<div class="card h-100">
						<div class="card-body">
							<h5 class="card-title">
								<i class="bi bi-folder"></i>
								{{ list.name }}</h5>
							
							<div class="mb-2">
								<small class="text-muted d-block mb-1">Joueurs :</small>
								<div class="d-flex flex-wrap gap-1">
									{% for player in list.players %}
										<span class="badge bg-secondary">{{ player.name }}</span>
									{% endfor %}
								</div>
							</div>
							<p class="text-muted small mb-3">{{ list.games|length }}
								partie(s)</p>
							<a href="{{ path('app_list_show', {id: list.id}) }}" class="btn btn-sm btn-outline-primary">
								<i class="bi bi-eye"></i>
								Ouvrir
							</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	{% else %}
		<div class="alert alert-info">
			<i class="bi bi-info-circle"></i>
			Aucune liste encore. Cr√©ez votre premi√®re liste.
		</div>
	{% endif %}
{% endblock %}
