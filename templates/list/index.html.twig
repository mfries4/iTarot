{% extends 'base.html.twig' %}
{% block title %}Mes listes - iTarot{% endblock %}
{% block body %}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3">Mes listes de parties</h1>
  <a href="{{ path('app_list_new') }}" class="btn btn-primary"><i class="bi bi-folder-plus"></i> Nouvelle liste</a>
</div>
{% if lists|length > 0 %}
<div class="row">
  {% for list in lists %}
    <div class="col-md-4 mb-3">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><i class="bi bi-folder"></i> {{ list.name }}</h5>
          <p class="mb-2"><i class="bi bi-people"></i> {{ list.players|length }} joueur(s)</p>
          <div class="mb-2">
            <small class="text-muted d-block mb-1">Joueurs :</small>
            <div class="d-flex flex-wrap gap-1">
              {% for player in list.players %}
                <span class="badge bg-secondary">{{ player.name }}</span>
              {% endfor %}
            </div>
          </div>
          <p class="text-muted small mb-3"><i class="bi bi-controller"></i> {{ list.games|length }} partie(s)</p>
          <a href="{{ path('app_list_show', {id: list.id}) }}" class="btn btn-sm btn-outline-primary">
            <i class="bi bi-eye"></i> Ouvrir
          </a>
          <form method="post" action="{{ path('app_list_delete', {id: list.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette liste et toutes ses parties ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ list.id) }}">
            <button type="submit" class="btn btn-sm btn-outline-danger">
              <i class="bi bi-trash"></i>
            </button>
          </form>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
{% else %}
<div class="alert alert-info">Aucune liste pour l'instant.</div>
{% endif %}
{% endblock %}
